{
    "manifest_version": 2,

    "name": "slackmark",
    "description": "This extension bookmarks an url which you are watching to a slack channel.",
    "version": "0.1",

    "permissions": [
        "tabs"
    ],

    "page_action": {
        "default_icon": "icon.png",
        "default_title": "post to a slack channel."
    },

    "background": {
        "scripts": [
            "js/lib/jquery-2.1.4.min.js",
            "js/background.js"
        ]
    },

    "options_page": "html/options.html"
}
